# AI新闻机器人环境变量配置示例
# 复制此文件为 .env 并填入您的实际配置

# 企业微信机器人Webhook URL
# 获取方式：在企业微信群中添加自定义机器人，复制Webhook地址
WECHAT_WEBHOOK_URL=https://qyapi.weixin.qq.com/cgi-bin/webhook/send?key=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# OpenAI API密钥（可选）
# 用于生成高质量的中文摘要，如果没有将使用原始摘要
OPENAI_API_KEY=sk-your-openai-api-key-here

# 时区设置
TZ=Asia/Shanghai

# 日志级别
LOG_LEVEL=INFO

# 每日执行时间 (HH:MM格式)
DAILY_TIME=09:30

# 最大新闻数量
MAX_NEWS=10

# 重复检查时间窗口（小时）
DUPLICATE_CHECK_HOURS=24